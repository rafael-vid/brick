     <script>

         function menuActive() {
             const links = document.querySelectorAll(".menu-dash li a");

             const handleLink = (event) => {
                 links.forEach((link) => {
                     link.classList.remove("dash-ativo");
                 });
                 event.currentTarget.classList.add("dash-ativo");
             };

             links.forEach((link) => {
                 link.addEventListener("click", handleLink);
             });
         }
         menuActive();
     </script>
